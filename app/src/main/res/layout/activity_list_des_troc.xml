<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#69B578" android:orientation="vertical"
    tools:context="com.example.myapplicationtroc.MainActivity">

    <ScrollView
        android:layout_width="match_parent" android:layout_height="match_parent" android:background="#E4E6C3">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:layout_marginTop="64dp"
            android:layout_marginRight="8dp">
            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="76dp" android:layout_height="wrap_content"
                app:srcCompat="@drawable/buttonshapeconnexion" tools:srcCompat="@drawable/troclogo"/>
            <TextView
                android:id="@+id/ScoreView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </TableRow>
    </ScrollView>
</LinearLayout>