<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGlobal" android:orientation="vertical"
    tools:context="com.example.myapplicationtroc.MainActivity">

    <LinearLayout
        android:id="@+id/idLayoutVerticale"
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:layout_gravity="center_vertical"
        android:orientation="vertical">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="vertical">
                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:layout_gravity="center|center_vertical"
                    android:padding="16dp" app:srcCompat="@drawable/troc_relief_logo_no_cadre_livre_3"/>
                <Button
                    android:id="@+id/idConnexion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_horizontal"
                    android:layout_marginLeft="24dp" android:layout_marginTop="0dp"
                    android:layout_marginRight="24dp" android:layout_marginBottom="0dp"
                    android:background="@drawable/btnradiusshape"
                    android:shadowColor="#f7f7f2"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="5" android:text="@string/connexion" android:textColor="@color/ColorNoir"
                    android:textSize="18sp"/>
                <Button
                    android:id="@+id/idInscription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:layout_gravity="center|center_horizontal"
                    android:layout_marginLeft="24dp" android:layout_marginTop="24dp"
                    android:layout_marginRight="24dp" android:layout_marginBottom="0dp"
                    android:background="@drawable/btnradiusshape"
                    android:shadowColor="#f7f7f2"
                    android:shadowDx="0"
                    android:shadowDy="0" android:shadowRadius="5" android:text="@string/inscription"
                    android:textColor="@color/ColorNoir" android:textSize="18sp"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>